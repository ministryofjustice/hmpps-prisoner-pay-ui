{% extends "homepageLayout.njk" %}
{% from "../../partials/card.njk" import card %}

{% set pageTitle = "Edit pay homepage" %}
{% set pageId = 'edit-pay-page' %}

{% block heading %}
<h1 class="govuk-heading-l">Edit pay settings</h1>
{% endblock %}

{% block content %}
    <div class="card-group govuk-grid-row">
            <div class="govuk-grid-column-one-third card-group__item">
                {{ card({
                    "href": "/pay-rates",
                    "clickable": "true",
                    "heading": "Pay rates for people not in work",
                    "description": "Change pay rates for people who are unemployed, sick or retired.",
                    "data-qa": "edit_pay_homepage"
                }) }}
            </div>
    </div>
{% endblock %}