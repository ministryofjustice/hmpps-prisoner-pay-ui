{% extends "layout.njk" %}

{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - cancel pay rate change" %}
{% set mainClasses = "govuk-body" %}
{% set backLinkHref = "./add-prisoner" %}

{% block content %}
   <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        <span class="govuk-caption-l">{{ payType.description }}</span>

        <form method="POST">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
          {{ govukRadios({
            classes: "govuk-radios--inline",
            name: "choice",
            fieldset: {
                legend: {
                    text: "Are you sure you want to cancel the pay rate change?",
                    isPageHeading: true,
                    classes: "govuk-fieldset__legend--l"
                }
            },
            hint: {
                text: "The pay rate is set to change to Â£" + payAmount / 100 + " per day from " + selectedDate | formatDate("EEEE, d MMMM yyyy") + "."
            },
            errorMessage: errors | findError('choice'),
            items: [
                {
                    value: "yes",
                    text: "Yes"
                },
                {
                    value: "no",
                    text: "No"
                }
            ]
          }) }}

          {{ govukButton({
              text: "Confirm"
          }) }}
        </form>
      </div>
    </div>
{% endblock %}
