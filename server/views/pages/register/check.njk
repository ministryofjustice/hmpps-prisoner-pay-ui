{% extends "layout.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}

{% set pageTitle = applicationName + " - check and confirm" %}
{% set mainClasses = "govuk-body" %}
{% set backLinkHref = "./end-date" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
             <span class="govuk-caption-xl">{{ payType.description }}</span>
            <h1>Check and confirm details</h1> 

            {{ govukSummaryList({
                  rows: [
                      {
                        key: { text: "Who you're adding" },
                        value: { text: prisonerName },
                        actions: {
                          items: [{
                              href: "add-prisoner",
                              classes: 'govuk-link--no-visited-state',
                              text: "Change",
                              visuallyHiddenText: "change prisoner"
                          }]
                        }
                      },
                      {
                        key: { text: "Current allocations" },
                        value: { text: endDate },
                        actions: {
                          items: [{
                              href: "end-date",
                              classes: 'govuk-link--no-visited-state',
                              text: "Change",
                              visuallyHiddenText: "change end date"
                          }]
                        }
                      }
                  ]
            }) }}

            {{ govukInsetText({
                text: "2 activity allocations will be ended today with the reason health"
            }) }}

            {{ govukButton({
                text: "Confirm and add to long-term sick",
                href: './register/check'
            }) }}
        </div>
    </div>
{% endblock %}
