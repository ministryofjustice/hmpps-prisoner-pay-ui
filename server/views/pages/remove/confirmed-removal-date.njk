{% extends "layout.njk" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% set pageTitle = applicationName + " - Removal date confirmation" %}
{% set mainClasses = "govuk-body" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            {{ govukPanel({
                titleText: "Removal complete",
                html: payStatusPeriod | formatName(NameFormatStyle.firstLast, false) + " (" + payStatusPeriod.prisonerNumber + ") will not receive " + payType.description | lower + " pay after " + selectedDate + "."
            }) }}

            <h2 class="govuk-heading-m">What you can do next</h2>

            <p class="govuk-body">You can:</p>
            <ul class="govuk-list govuk-list--bullet">
                <li>
                    <a class="govuk-link--no-visited-state" href="{{ activitiesUiUrl }}/prisoner-allocations/{{ payStatusPeriod.prisonerNumber }}">allocate {{ payStatusPeriod | formatName(NameFormatStyle.firstLast, false) }} to activities</a>
                </li>
                <li>
                    <a class="govuk-link--no-visited-state" href="../../pay-overview">review people who are on {{ payType.description | lower}}</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
