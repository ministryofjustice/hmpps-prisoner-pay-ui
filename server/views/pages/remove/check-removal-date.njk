{% extends "layout.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}

{% set pageTitle = applicationName + " - Check removal date" %}
{% set mainClasses = "govuk-body" %}
{% set backLinkHref = "./removal-date" %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <span class="govuk-caption-l">{{ payType.description }}</span>
            <h1 class="govuk-heading-l">Check and confirm details</h1>

            {{ govukSummaryList({
                  rows: [
                      {
                        key: { text: "Who you're removing" },
                        value: { text: payStatusPeriod | formatName(NameFormatStyle.firstLast, false) },
                        actions: {
                          items: [{
                              href: "../../pay-overview",
                              classes: 'govuk-link--no-visited-state',
                              text: "Change",
                              visuallyHiddenText: "prisoner being removed"
                          }]
                        }
                      },
                      {
                        key: { text: "Removal date" },
                        value: { text: selectedDate },
                        actions: {
                          items: [{
                              href: "./removal-date",
                              classes: 'govuk-link--no-visited-state',
                              text: "Change",
                              visuallyHiddenText: "removal date"
                          }]
                        }
                      }
                  ]
            }) }}
            <form method="POST">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>
                <div class="govuk-button-group">
                    {{ govukButton({
                        text: "Confirm and remove from " + payType.description | lower
                    }) }}
                    <a class="govuk-link" href="../../pay-overview">Cancel</a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
